<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal" >

        <vn.com.sonca.Touch.BlockCommand.CommandBack
            android:id="@+id/CommandBack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/layoutLeft"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/background_khoadieukhien"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="4" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <vn.com.sonca.Touch.BlockCommand.ButonOnOff
                        android:id="@+id/UserCommand"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <vn.com.sonca.Touch.BlockCommand.ButonOnOff
                        android:id="@+id/DanceCommand"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <vn.com.sonca.Touch.BlockCommand.GroupScoreOnOff
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <vn.com.sonca.Touch.BlockCommand.ButtonVolumnOnOff
                            android:id="@+id/VolumeCommand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <vn.com.sonca.Touch.BlockCommand.VolumnMasterView
                            android:id="@+id/VolumnMasterView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </vn.com.sonca.Touch.BlockCommand.GroupScoreOnOff>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <vn.com.sonca.Touch.BlockCommand.GroupScoreOnOff
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <vn.com.sonca.Touch.BlockCommand.ButtonScoreOnOff
                            android:id="@+id/ScoreCommand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <vn.com.sonca.Touch.CustomView.TouchScoreView
                            android:id="@+id/ScoreView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </vn.com.sonca.Touch.BlockCommand.GroupScoreOnOff>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/viewLine1"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/touch_shape_line_ver" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCenter"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/background_khoadieukhien"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="4" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <vn.com.sonca.Touch.BlockCommand.ButonOnOff
                        android:id="@+id/ToneCommand"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <vn.com.sonca.Touch.BlockCommand.ButtonMelodyOnOff
                        android:id="@+id/MelodyCommand"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <vn.com.sonca.Touch.BlockCommand.ButonOnOff
                        android:id="@+id/TempoCommand"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <vn.com.sonca.Touch.BlockCommand.ButonOnOff
                        android:id="@+id/KeyCommand"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/viewLine2"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/touch_shape_line_ver" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRight"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/background_khoadieukhien"
            android:orientation="vertical"
            android:weightSum="4" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <vn.com.sonca.Touch.BlockCommand.ButonOnOff
                    android:id="@+id/SingerCommand"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <vn.com.sonca.Touch.BlockCommand.ButonOnOff
                    android:id="@+id/RepeatCommand"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <vn.com.sonca.Touch.BlockCommand.ButonOnOff
                    android:id="@+id/PauseCommand"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <vn.com.sonca.Touch.BlockCommand.ButonOnOff
                    android:id="@+id/NextCommand"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="@drawable/background_khoadieukhien"
        android:orientation="horizontal" >

        <vn.com.sonca.Touch.BlockCommand.ButtonOk
            android:id="@+id/ButtonOk"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

</LinearLayout>