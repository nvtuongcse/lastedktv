<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <app.sonca.Dialog.ScoreLayout.ScoreViewGroup
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <app.sonca.Dialog.ScoreLayout.ScoreBackgroud
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <app.sonca.Dialog.ScoreLayout.ScoreFrameView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <app.sonca.Dialog.ScoreLayout.ScoreFrameView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <app.sonca.Dialog.ScoreLayout.ScoreKaraokeView
                android:id="@+id/ScoreView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <app.sonca.Dialog.ScoreLayout.ScoreItem
                android:id="@+id/item00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <app.sonca.Dialog.ScoreLayout.ScoreItem
                android:id="@+id/item01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <app.sonca.Dialog.ScoreLayout.ScoreItem
                android:id="@+id/item02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <app.sonca.Dialog.ScoreLayout.ScoreItem
                android:id="@+id/item03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <app.sonca.Dialog.ScoreLayout.ScoreItem
                android:id="@+id/item04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <app.sonca.Dialog.ScoreLayout.ScoreImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </app.sonca.Dialog.ScoreLayout.ScoreViewGroup>
    </LinearLayout>

</LinearLayout>