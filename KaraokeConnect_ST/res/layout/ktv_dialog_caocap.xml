<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="9" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:orientation="vertical"
                android:weightSum="2" >

                <View
                    android:id="@+id/layoutSpace1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:alpha="0.8"
                    android:background="#012847" />

                <RelativeLayout
                    android:id="@+id/layoutSpace2"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:alpha="0.8"
                        android:background="#012847" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/touch_shape_line_hor" />

                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:alpha="0.8"
                    android:background="#012847" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:alpha="0.8"
                        android:background="#012847" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/touch_shape_line_hor" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="2" >

            <LinearLayout
                android:id="@+id/layoutSpace3"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal"
                android:weightSum="9" >

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/melodyGiam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/melodyTang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/tempoGiam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/tempoTang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/tone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/hoaAm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/macDinh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal"
                android:weightSum="9" >

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/chinhMiDi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/ngatTieng"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/tamDung"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/giamTone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/tangTone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/hatLai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <vn.com.sonca.zktv.main.ViewCaoCap
                    android:id="@+id/chamDiem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="0.15" />

</LinearLayout>