<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <vn.com.sonca.Touch.CustomView.TouchViewLeftNo
        android:id="@+id/ViewLeftNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <View
        android:id="@+id/color_screen_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ViewLeftNo"
        android:alpha="0.95"
        android:background="@color/color_background_key" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignRight="@+id/ViewLeftNo"
        android:orientation="vertical"
        android:gravity="top|center">
        
        <vn.com.sonca.Touch.CustomView.TouchTopModelView
            android:id="@+id/TopModelView"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
        
        <ListView 
            android:id="@+id/ListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            android:splitMotionEvents="false" />
 
        <vn.com.sonca.Touch.CustomView.TouchButtonModel
            android:id="@+id/ButtonModel"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
        
        
    </LinearLayout>
    
	<View
        android:id="@+id/viewColorLine"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_alignRight="@+id/ViewLeftNo"
        android:layout_marginRight="0dp"
        android:background="@drawable/touch_shape_line_ver" />

</RelativeLayout>
